<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } do  %>
<i class="fab fa-trash"></i>
      <% end %>


    </li>
  </ul>
<% end %>


